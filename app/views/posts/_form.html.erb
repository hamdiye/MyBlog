
<%= form_for @post do |f| %>

<div class="form-group">
  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>
</div>

  <div class="form-group">
	<%= f.label :title, "Başlık",class:"control-label" %>
	<%= f.text_field :title, placeholder: "Başlık Giriniz...", class: "form-control"%>
  </div>

<div class="form-group">
	<%= f.label :content, "Makaleniz", class: "control-label"%><br>
	<%= f.text_area :content, placeholder:"Makalenizi Giriniz...", class:"form-control"%><br>
  </div>
	<br>
	  <%= f.submit "Gönder", class: "btn btn-default btn-primary btn-lg" %>
<% end %>
